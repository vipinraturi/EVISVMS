<ol class="breadcrumb">
    <li><a href="#" class="a-color">Visitor Management</a></li>
    <li><a href="#" class="a-color">Visitor Check-In & Check-Out</a></li>
</ol>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12 ">
        <input id="txtEmail" type="text" class="form-control searchVisitor" placeholder="Email Address / Contact Number / Identity Id" />
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Visitor Check-in & Check-out</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <div class="profile_img col-sm-4">
                    <div id="crop-avatar">
                        <img class="img-responsive avatar-view" src="../images/avatar.jpg" alt="Avatar" title="Change the avatar" style="height:150px">
                    </div>
                </div>
                <div class="col-sm-8">
                    <ul class="list-unstyled user_data">
                        <li>
                            <i class="fa fa-user favwhite user-profile-icon"></i>
                            <label id="lblVisitorName" data-bind="text: VisitorName" />
                        </li>
                        <li>
                            <i class="fa fa-mars favwhite user-profile-icon"></i>
                            <label id="lblGender" data-bind="text: Gender" />
                        </li>
                        <li>
                            <i class="fa fa-calendar favwhite user-profile-icon"></i>
                            <label id="lblDOB" data-bind="text: DOB" />
                        </li>
                        <li>
                            <i class="fa fa-phone favwhite user-profile-icon"></i>
                            <label id="lblMobileNo" data-bind="text: MobileNo" />
                        </li>
                        <li>
                            <i class="fa fa-envelope favwhite user-profile-icon"></i>
                            <label id="lblEmailId" data-bind="text: EmailId" />
                        </li>
                        <li>
                            <i class="fa fa-simplybuilt favwhite user-profile-icon"></i>
                            <label id="lblIdentificationNo" data-bind="text: IdentificationNo" />
                        </li>
                        <li>
                            <i class="fa fa-flag favwhite user-profile-icon"></i>
                            <label id="lblNationality" data-bind="text: Nationality" />
                        </li>
                    </ul>
                </div>
                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Contact Person <span class="mandatoryField">*</span></label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <input id="" type="text" class="form-control" placeholder="Contact Person" data-bind="value: ContactPerson" required="required" />
                        <span class="fa fa-user favwhite form-control-feedback right" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">No. of Persons <span class="mandatoryField">*</span></label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <input id="" type="text" class="form-control" placeholder="1" data-bind="value: NoOfPerson" required="required" />
                        <span class="fa fa-users favwhite form-control-feedback right" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Purpose / Remark</label>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <textarea id="txtAddress" class="form-control" rows="3" placeholder="Purpose / Remark" data-bind="value: Purpose_Remark" required="required" style="resize: none;"></textarea>
                        <span class="fa fa-file favwhite form-control-feedback right" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group col-md-12 col-sm-12 col-xs-12">
                    <button type="button" class="btn btn-success  pull-right" style="margin:5px;" data-bind="click: SaveVisitorCheckIn.bind()">Check-In</button>
                    <button type="button" class="btn btn-primary  pull-right" style="margin:5px;" data-bind="click: ResetCheckInData.bind()">Reset</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2 style="padding-bottom:10px;">Check-In & Check-Out History</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content ">
                <br />
                <form class="form-horizontal form-label-left">
                    <table class="table jambo_table">
                        <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 10%">Date</th>
                                <th style="width: 12%">Check In</th>
                                <th style="width: 12%">Check Out</th>
                                <th style="width: 12%">Total Duration</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: VisitorHiostory">
                            <tr>
                                <td data-bind="text: $index() + 1"></td>
                                <td data-bind="text: CheckInDate"></td>
                                <td data-bind="text: CheckInTime"></td>
                                <td data-bind="text: CheckOutTime"></td>
                                <td></td>
                            </tr>
                        </tbody>
                        <tbody data-bind="if:VisitorHiostory().length == 0">
                            <tr>
                                <td colspan="5" style="text-align:center;">
                                    No data found.
                                </td>
                            </tr>
                        </tbody>
                            @*
                            <tr>
                                <td>8</td>
                                <td>12-Dec-2012</td>
                                <td>9:50 AM</td>
                                <td>12:15 PM</td>
                                <td>2(H),25(M)</td>
                            </tr>*@
                    </table>
                
                </form>
            </div>
        </div>
    </div>
</div>
