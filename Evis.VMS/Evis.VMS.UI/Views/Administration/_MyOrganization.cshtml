@{
    ViewBag.Title = "_MyOrganization";
}

<ol class="breadcrumb">
    <li><a href="#" class="a-color">Home</a></li>
    <li><a href="#" class="a-color">My Organization</a></li>
</ol>
<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Update Organization</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content leftcontent">
                <form class="form-horizontal form-label-left input_mask">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Company Name <span class="mandatoryField">*</span></label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input id="txtCompanyName" type="text" class="form-control Fieldfocus" maxlength="50" placeholder="Company Name" data-bind="value: CompanyName" />
                            <span class="fa fa-suitcase favwhite form-control-feedback right" aria-hidden="true"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Head Quarters  <span class="mandatoryField">*</span></label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                           <select class="form-control Fieldfocus" data-bind="options: Countries, optionsText: 'Name', optionsValue: 'Id', value: CountryId, optionsCaption: '-- Select Country--'"></select>
                        </div>
                    </div>

                   
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Website</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <input id="txtWebsite" type="text" class="form-control Fieldfocus" maxlength="50" placeholder="Website URL" data-bind="value: WebSite.extend({ url: true })" />
                            <span class="fa fa-globe favwhite form-control-feedback right" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <button type="button" class="btn btn-primary" data-bind="click: ResetOrganization.bind()">Reset <i class="fa fa-refresh"></i></button>
                            <button type="button" class="btn btn-success" data-bind="click: SaveOrganization">Update <i class="fa fa-save"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Logo Selection</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <p>Logo Selection</p>

                    <div class="col-md-pull-6">
                        <div class="thumbnail" style="height:450px !important">
                            <div class="image view view-first" style="height:380px !important">
                                <img style="width: 100%; height:100%; display: block;" alt="image" title="Change the logo" id="myLogo" />
                                <!-- Cropping modal -->
                                <!-- /.modal -->
                                <div class="mask no-caption" >
                                    <div class="tools tools-bottom" style="margin:345px 0 0 !important">
                                        <a href="#" data-toggle="modal" data-target="#avatar-modal"><i class="fa fa-pencil"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="caption">
                                <p>
                                    <strong>Company Logo</strong>
                                </p>
                                <p>Click here to Change</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


</div>
<div class="modal fade" id="avatar-modal" aria-hidden="true" aria-labelledby="avatar-modal-label" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="avatar-form" action="javascript:void(0)" enctype="multipart/form-data" method="post">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal" type="button">&times;</button>
                    <h4 class="modal-title" id="avatar-modal-label">Change Avatar</h4>
                </div>
                <div class="modal-body">
                    <div class="avatar-body">
                        <div class="avatar-upload">
                            <input class="avatar-src" name="avatar_src" type="hidden">
                            <input class="avatar-data" name="avatar_data" type="hidden">
                            <label for="avatarInput" style="color:black"> Upload Image</label>
                            <input class="avatar-input" id="avatarInput" accept="image/*" name="avatar_file" type="file" onchange="loadFile(event)">
                        </div>

                        <div class="row">
                            <div class="col-md-9">
                                <img id="myImg" alt="your image" class="avatar-wrapper" />
                            </div>
                        </div>
                        <script>
                            

                            var loadFile = function (event) {
                                var output = document.getElementById('myImg');
                                output.src = URL.createObjectURL(event.target.files[0]);
                            };
                        </script>

                        <div class="row avatar-btns">
                            <div class="col-md-3">
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" data-bind="click: SaveImage" id="submit">Upload</button>
                    <button class="btn btn-primary" type="button" data-bind="click:LoadImage">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>