@Styles.Render("~/Content/shift_management")
<ol class="breadcrumb">
    <li><a href="#" class="a-color">Administration</a></li>
    <li><a href="#" class="a-color">Shifts Management</a></li>
</ol>
<div class="row">
    <div id="ccanvas">
        <div id="top">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        <div class="col-xs-12">
                            <select class="form-control Fieldfocus" data-bind="options: Buildings, optionsText: 'Name' ,optionsValue: 'Id', value: BuildingId, optionsCaption: '-- Select Building --',event:{ change: GetGates.bind()()}"></select>
                        </div>
                    </div>
                    <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        <div class="col-xs-12">
                            <select class="form-control Fieldfocus" data-bind="options: Gates, optionsText: 'Name' ,optionsValue: 'Id', value: GateId, optionsCaption: '-- Select Gate --',event:{ change: GetUsers()}"></select>
                        </div>
                    </div>
                    <div class="form-group col-md-2 col-sm-2 col-xs-12">
                        <div class="col-xs-12">
                            <input id="txtShiftDate" type="text" class="form-control Fieldfocus" placeholder="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="form-group col-md-1 col-sm-1 col-xs-12" style="margin-top:5px;">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group col-md-5 col-sm-5 col-xs-12 pull-right" style="">
                        <div class="col-xs-12">
                            <div class="timelines" id="">
                                <div id="tls_day" title="Day">Day</div>
                                <div id="tls_week" title="Week" class="selected">Week</div>
                                <div id="tls_twoweek" title="Two Weeks">2 Week</div>
                                <div id="tls_month" title="Month" class="last">4 Week</div>
                                <div onclick="prev();">&lt;</div>
                                <div onclick="today();" id="tls_today" title="Today">Today</div>
                                <div onclick="next();" style="margin-right: -1px;">&gt;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="_s_chart" class="hide" style="width: calc(100% - 190px); height: 65px; margin-left: 190px; display: none;"></div>
            <div class="date">
                <table class="timeline" id="tweek" style="display: table; overflow:scroll; overflow-x:scroll;  ">
                    <tbody>
                        <tr>

                            <td class="daterange jump" id="_wdr" title="Sep 4, 2016" data-bind="text: Header().ShiftMainDates"></td>
                            <td class="shiftname jump" id="_wdr">Shift Name</td>
                            <!-- ko foreach: Header().ListAllDates -->
                            <td class="jump" id="wtl1" title="Sep 4, 2016" data-bind="text: $data"></td>
                            <!-- /ko -->
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
        <div id="scheduler" class="emp_view" style="margin-right: 0px; height: 402px;">
            <table id="weeklist" class="weeklist tbl">
                <tbody>
                    <!-- ko foreach: self.Body() -->
                    <tr>
                        <td class="wemp" id="e_2893422">
                            <div class="udrag ui-draggable" alt="2893422">
                                <img src="/images/avatar.jpg" class="usr tti" title="Drag to a shift"><span class="jump" data-bind="text: Securityname"></span>
                            </div>
                        </td>
                        <td class="shiftNameCol" id="w_2893422_Sep_4__2016">
                            <table class="weeklist tbl">
                                <tbody data-bind="foreach:$data.Shifts">
                                    <tr>
                                        <td class="shiftCell" id="1" data-bind="text: $data"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>

                        <td class="day wk dcol0">
                            <table class="weeklist tbl">
                                <tbody data-bind="foreach:$data.ShiftDetails_Shift">
                                    <tr>
                                        <!-- ko foreach: $data.ShiftDates -->
                                        <td class="shiftCell" id="4">
                                            <i class="fa fa-check fa-check-unique" aria-hidden="true"></i>
                                        </td>
                                        <!-- /ko -->
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <!-- /ko -->
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" style="color:black">Update Shift</h4>
                </div>
                <div class="modal-body">
                    <p style="color:black">Are you sure you want to update the shift?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" data-bind="click: ChangeShift.bind($data)">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
